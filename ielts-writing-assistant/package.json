{
  "name": "ielts-writing-assistant",
  "version": "1.0.0",
  "description": "雅思AI作文评判应用 - 桌面端应用",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:vue": "vite",
    "dev:server": "nodemon server/index.js",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "icons": "cd assets && ./create-icons.sh",
    "init-db": "node server/database/init-topics.js",
    "test-system": "node server/test-system.js"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "element-plus": "^2.4.0",
    "@element-plus/icons-vue": "^2.3.0",
    "@tiptap/starter-kit": "^2.1.0",
    "@tiptap/extension-highlight": "^2.1.0",
    "@tiptap/extension-underline": "^2.1.0",
    "@tiptap/vue-3": "^2.1.0",
    "echarts": "^5.4.0",
    "vue-echarts": "^6.6.0",
    "express": "^4.18.0",
    "better-sqlite3": "^9.2.0",
    "openai": "^4.20.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0",
    "cors": "^2.8.5",
    "json2csv": "^6.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "nodemon": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0"
  },
  "build": {
    "appId": "com.ielts.writing.assistant",
    "productName": "雅思AI作文评判助手",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": ["ielts", "writing", "ai", "assessment", "electron", "vue"],
  "author": "IELTS Writing Assistant Team",
  "license": "MIT"
}