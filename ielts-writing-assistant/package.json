{
  "name": "ielts-writing-assistant",
  "version": "1.0.0",
  "description": "雅思AI作文评判应用 - 桌面端应用",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:vue": "vite",
    "dev:server": "nodemon server/index.js",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:all": "npm run build && electron-builder -mwl",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "icons": "cd assets && ./create-icons.sh",
    "init-db": "node server/database/init-topics.js",
    "test-system": "node server/test-system.js",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && electron-builder --dir",
    "release": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "element-plus": "^2.4.0",
    "@element-plus/icons-vue": "^2.3.0",
    "@tiptap/starter-kit": "^2.1.0",
    "@tiptap/extension-highlight": "^2.1.0",
    "@tiptap/extension-underline": "^2.1.0",
    "@tiptap/vue-3": "^2.1.0",
    "echarts": "^5.4.0",
    "vue-echarts": "^6.6.0",
    "express": "^4.18.0",
    "better-sqlite3": "^9.2.0",
    "openai": "^4.20.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "electron-log": "^5.0.0",
    "uuid": "^9.0.0",
    "cors": "^2.8.5",
    "json2csv": "^5.0.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "nodemon": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0"
  },
  "build": {
    "productName": "IELTS Writing Assistant",
    "appId": "com.ielts.assistant.app",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build",
      "cache": "cache",
      "app": "dist"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "README.md",
      "LICENSE",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pcap,png,bmp,jpg,jpeg,tiff,pdf,doc,docx,xls,xlsx,ppt,pptx}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_project}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,yarn-integrity,yarn-error.log,lerna-debug.log}",
      "!**/{.eslintcache,.stylelintcache}"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}.${ext}",
      "publisherName": "IELTS Assistant Team",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.education",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "inherit",
      "extendInfo": {
        "CFBundleIdentifier": "com.ielts.assistant.app"
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "resources/icon.png",
      "category": "Education",
      "desktop": {
        "Name": "${productName}",
        "Comment": "IELTS Writing Assistant",
        "Keywords": "education;ielts;writing;assistant;",
        "Exec": "/opt/${productName}/${productName} %U",
        "Icon": "${productName}"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "resources/installer.ico",
      "installerHeaderIcon": "resources/header-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}",
      "include": "installer.nsh",
      "script": "installer.nsh",
      "uninstallDisplayName": "${productName}",
      "language": "2052",
      "displayLanguageSelector": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-username",
        "repo": "ielts-writing-assistant",
        "private": false,
        "releaseType": "release"
      }
    ],
    "releaseInfo": {
      "releaseNotesFile": "RELEASE.md"
    },
    "afterSign": "scripts/notarize.js",
    "beforePack": "scripts/prepack.js",
    "afterPack": "scripts/postpack.js",
    "prepack": "scripts/prepack.json"
  },
  "keywords": ["ielts", "writing", "ai", "assessment", "electron", "vue"],
  "author": "IELTS Writing Assistant Team",
  "license": "MIT"
}